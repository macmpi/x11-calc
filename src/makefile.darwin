CFLAGS	+= -I/opt/X11/include/
LDFLAGS += -L/opt/X11/lib/
LDLIBS	?=

LANG 	= LANG_en

ifneq ($(COMMIT),)
CFLAGS	+= -DCOMMIT_ID='"[Commit Id : $(COMMIT)]"'
endif
ifneq ($(SCALE_WIDTH),)
CFLAGS	+= -DSCALE_WIDTH=$(SCALE_WIDTH)
endif
ifneq ($(SCALE_HEIGHT),)
CFLAGS	+= -DSCALE_HEIGHT=$(SCALE_HEIGHT)
endif

include makefile.all
